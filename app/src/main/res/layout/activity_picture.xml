<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Picture">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/main_picture"
            android:layout_width="409dp"
            android:layout_height="308dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="106dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="317dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_launcher_background" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="411dp"
            android:layout_height="315dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_picture">

            <TextView
                android:id="@+id/description_content"
                android:layout_width="232dp"
                android:layout_height="60dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="88dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/description"
                android:layout_width="85dp"
                android:layout_height="19dp"
                android:layout_marginEnd="172dp"
                android:text="Description  :"
                app:layout_constraintBottom_toTopOf="@+id/description_content"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/username"
                android:layout_width="72dp"
                android:layout_height="17dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="211dp"
                android:gravity="center"
                android:text="undefined"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/localisation_content"
                android:layout_width="128dp"
                android:layout_height="53dp"
                android:layout_marginEnd="129dp"
                android:layout_marginBottom="22dp"
                app:layout_constraintBottom_toTopOf="@+id/description"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/localisation"
                android:layout_width="85dp"
                android:layout_height="19dp"
                android:layout_marginEnd="172dp"
                android:text="Localisation :"
                app:layout_constraintBottom_toTopOf="@+id/localisation_content"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/picture_avatar"
                android:layout_width="55dp"
                android:layout_height="53dp"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="6dp"
                app:layout_constraintBottom_toTopOf="@+id/username"
                app:layout_constraintStart_toStartOf="parent"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>